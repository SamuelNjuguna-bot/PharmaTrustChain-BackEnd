{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",               // good for Node ESM projects
    "moduleResolution": "nodenext",     // match with above
    "rootDir": "./src",                 // tells TS where source files live
    "outDir": "./dist",                 // compiled JS will go here
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],                  // add Node.js types
    "lib": ["esnext"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

